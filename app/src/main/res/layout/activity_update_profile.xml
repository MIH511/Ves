<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.UpdateProfileActivity"
    android:background="@drawable/pattern">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gideLine_H"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.0"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gideLine_H_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.91"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gideLine_H_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gideLine_H_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="1.0"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gideLine_v"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.0" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gideLine_v_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gideLine_v_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gideLine_v_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.97"
        />
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_update_profile"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:titleTextColor="@color/white"
        android:background="@color/colorPrimary"
        android:theme="@style/ToolbarAboutTheme">
    </androidx.appcompat.widget.Toolbar>
    <ImageView
        android:id="@+id/logo_update_profile"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/mainlogo"
        app:layout_constraintEnd_toEndOf="@id/gideLine_v_3"
        app:layout_constraintTop_toTopOf="@id/toolbar_update_profile"
        app:layout_constraintBottom_toBottomOf="@id/toolbar_update_profile"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar_update_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gideLine_H_cons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.0"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gideLine_H_1_cons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.1"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gideLine_H_2_cons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.8"/>
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gideLine_H_3_cons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="1.0"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gideLine_v_cons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.0" />
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gideLine_v_1_cons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.05"
                />
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gideLine_v_2_cons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.95"
                />
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gideLine_v_3_cons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.98"
                />


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image_update"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:layout_constraintStart_toStartOf="@id/gideLine_v_1_cons"
                app:layout_constraintTop_toTopOf="@id/gideLine_H_1_cons"
                app:layout_constraintEnd_toEndOf="@id/gideLine_v_2_cons"
                android:src="@mipmap/ic_launcher_round"
                android:scaleType="centerCrop"/>
            <TextView
                android:id="@+id/add_profile_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/profile_image_update"
                app:layout_constraintStart_toStartOf="@id/profile_image_update"
                app:layout_constraintEnd_toEndOf="@id/profile_image_update"
                android:background="@drawable/background_add_to_basket_bt"
                android:text="@string/addProfilePicture"
                android:textColor="@color/white"
                android:padding="5dp"/>
            <TextView
                android:id="@+id/user_name_update_profile_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/gideLine_v_1_cons"
                app:layout_constraintTop_toBottomOf="@id/add_profile_pic"
                android:text="@string/UserName"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/user_name_update_profile_EdTx"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_signup"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:inputType="textPersonName"
                android:layout_marginTop="5dp"
                app:layout_constraintStart_toStartOf="@id/gideLine_v_1_cons"
                app:layout_constraintTop_toBottomOf="@id/user_name_update_profile_tx"
                app:layout_constraintEnd_toEndOf="@id/gideLine_v_2_cons"
                />
            <TextView
                android:id="@+id/email_update_profile_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/gideLine_v_1_cons"
                app:layout_constraintTop_toBottomOf="@id/user_name_update_profile_EdTx"
                android:layout_marginTop="10dp"
                android:text="@string/email"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/email_update_profile_EdTx"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_signup"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginTop="5dp"
                android:inputType="textEmailAddress"
                app:layout_constraintStart_toStartOf="@id/gideLine_v_1_cons"
                app:layout_constraintTop_toBottomOf="@id/email_update_profile_tx"
                app:layout_constraintEnd_toEndOf="@id/gideLine_v_2_cons"
                />


            <TextView
                android:id="@+id/phone_update_profile_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/gideLine_v_1_cons"
                app:layout_constraintTop_toBottomOf="@id/email_update_profile_EdTx"
                android:layout_marginTop="10dp"
                android:text="@string/phone_number"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/phone_update_profile_EdTx"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_signup"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:inputType="phone"
                android:layout_marginTop="5dp"
                app:layout_constraintStart_toStartOf="@id/gideLine_v_1_cons"
                app:layout_constraintTop_toBottomOf="@id/phone_update_profile_tx"
                app:layout_constraintEnd_toEndOf="@id/gideLine_v_2_cons"
                />
            <TextView
                android:id="@+id/password_update_profile_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/gideLine_v_1_cons"
                app:layout_constraintTop_toBottomOf="@id/phone_update_profile_EdTx"
                android:layout_marginTop="10dp"
                android:text="@string/PASSWORD"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/password_update_profile_EdTx"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_signup"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginTop="5dp"
                android:inputType="textVisiblePassword"
                app:layout_constraintStart_toStartOf="@id/gideLine_v_1_cons"
                app:layout_constraintTop_toBottomOf="@id/password_update_profile_tx"
                app:layout_constraintEnd_toEndOf="@id/gideLine_v_2_cons"
                />
            <TextView
                android:id="@+id/address_update_profile_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/gideLine_v_1_cons"
                app:layout_constraintTop_toBottomOf="@id/password_update_profile_EdTx"
                android:layout_marginTop="10dp"
                android:text="@string/address"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/address_update_profile_EdTx"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_signup"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginTop="5dp"
                android:inputType="text"
                app:layout_constraintStart_toStartOf="@id/gideLine_v_1_cons"
                app:layout_constraintTop_toBottomOf="@id/address_update_profile_tx"
                app:layout_constraintEnd_toEndOf="@id/gideLine_v_2_cons"
                />
            <Button
                android:id="@+id/save_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/save"
                android:background="@drawable/bt_welocme"
                app:layout_constraintTop_toBottomOf="@id/address_update_profile_EdTx"
                app:layout_constraintStart_toStartOf="@id/address_update_profile_EdTx"
                app:layout_constraintEnd_toEndOf="@id/address_update_profile_EdTx"
                android:layout_marginTop="20dp"
                android:textColor="@color/white"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <TextView
        android:id="@+id/change_language_update_profile_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/gideLine_v_1"
        app:layout_constraintTop_toBottomOf="@id/toolbar_update_profile"
        app:layout_constraintBottom_toBottomOf="@id/gideLine_H_2"
        android:text="@string/Language"
        android:textSize="@dimen/_12ssp"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"/>


</androidx.constraintlayout.widget.ConstraintLayout>